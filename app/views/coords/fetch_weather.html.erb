<div class="page-header">
  <h1>Weather Lookup</h1>
</div>

<div class = "container">
  <div class="row">
    <div class="col-md-8">
      <form role = "form">
        <div class = "form-group">
        Location:<input type="text" name="location">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>


<div class="row">
  <div class= "col-md-8">

    <dl>
      <dt>Latitude:</dt>
      <dd><%= @latitude %></dd>

      <dt>Longitude:</dt>
      <dd><%= @longitude %></dd>

      <dt>Current temperature:</dt>
      <dd><%= @temperature %></dd>

      <dt>Summary for the hour:</dt>
      <dd><%= @minutely_summary %></dd>

      <dt>Summary for the day:</dt>
      <dd><%= @hourly_summary %></dd>

      <dt>Summary for the week:</dt>
      <dd><%= @daily_summary %></dd>
    </dl>

  </div>
</div>
</div>
